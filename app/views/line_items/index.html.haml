.page-header
  <h2>Корзина</h2>
.row
  .list-group
    .list-group-item.active
      .row
        .col-md-3
          Название
        .col-md-3
          Количество
        .col-md-3
          Цена
        .col-md-3
          Сумма
  .list-group
    - @line_items.each do |item|
      .list-group-item
        .row
          .col-md-3
            #{item.product.name}
          .col-md-3
            =link_to '', plus_minus_line_item_path(id: item.id ,op: :minus), class:"btn btn-mini glyphicon glyphicon-minus", id: "li_minus#{item.id}", remote: true
            #{item.quantity}
            =link_to '', plus_minus_line_item_path(id: item.id,op: :plus), class:"btn btn-mini glyphicon glyphicon-plus", id: "li_plus#{item.id}", remote: true
          .col-md-3
            #{item.price}
          .col-md-3
            #{item.quantity*item.price}
%p
.row
  .col-md-4
    .list-group
      .list-group-item.active.glyphicon.glyphicon-list.li
        Итог:
      .list-group-item.glyphicon.glyphicon-info-sign.li
        Всего товарных позиций: #{@line_items.length}
        .br
        .li
          Всего товаров:
          #{@line_items.sum("quantity")}
      .list-group-item.glyphicon.glyphicon-ruble
        Цена:
        #{number_to_currency(@cart.all_summ)}

-#= link_to 'Редактировать', edit_cart_path(@cart), class: "btn btn-link"
