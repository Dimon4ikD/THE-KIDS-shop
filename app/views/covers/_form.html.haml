= form_for @cover do |f|
  - if @cover.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cover.errors.count, "error")} prohibited this cover from being saved:"
      %ul
        - @cover.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
